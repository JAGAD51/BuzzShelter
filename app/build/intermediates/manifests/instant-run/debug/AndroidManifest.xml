<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tonyzhang.buzzshelter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="26" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.buzzshelter.Controllers.WelcomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.buzzshelter.Controllers.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.buzzshelter.Controllers.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.buzzshelter.Controllers.WelcomeActivity" />
        </activity>
        <activity android:name="com.buzzshelter.Controllers.MainActivity" />
        <activity
            android:name="com.buzzshelter.Controllers.ViewShelterActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name="com.buzzshelter.Controllers.EnterShelterActivity" />
        <activity android:name="com.buzzshelter.Controllers.DetailedShelterActivity" />
        <activity android:name="com.buzzshelter.Controllers.ClaimBedActivity" />
        <activity
            android:name="com.buzzshelter.Controllers.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.tonyzhang.buzzshelter.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>